<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Ninfac\ContaBundle\Entity\CtlProducto" table="ctl_producto">
    <indexes>
      <index name="IDX_CE4BEAC3E88F3A0E" columns="id_punto_venta"/>
      <index name="IDX_CE4BEAC3664AF320" columns="id_empresa"/>
      <index name="IDX_CE4BEAC3628BDAE3" columns="id_grupo"/>
      <index name="IDX_CE4BEAC3E98F4023" columns="id_marca"/>
      <index name="IDX_CE4BEAC37569F2C7" columns="id_presentacion"/>
      <index name="IDX_CE4BEAC3A666989C" columns="id_subgrupo"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="SEQUENCE"/>
      <sequence-generator sequence-name="ctl_producto_id_seq" allocation-size="1" initial-value="1"/>
    </id>
    <field name="codigo" type="string" column="codigo" length="25" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">Codigo de producto ejemplo 9780973576627</option>
      </options>
    </field>
    <field name="nombre" type="string" column="nombre" length="80" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="exento" type="boolean" column="exento" nullable="false">
      <options>
        <option name="comment">Especifica si es un producto excento de IVA</option>
      </options>
    </field>
    <field name="minimo" type="decimal" column="minimo" precision="10" scale="0" nullable="false">
      <options>
        <option name="comment">Especifica la cantidad minima en existencia, para generar reporte</option>
      </options>
    </field>
    <field name="maximo" type="decimal" column="maximo" precision="10" scale="0" nullable="false">
      <options>
        <option name="comment">Especifica la cantidad maxima en existencia, para generar reporte</option>
      </options>
    </field>
    <field name="enPromocion" type="boolean" column="en_promocion" nullable="false">
      <options>
        <option name="comment">Especifica si el producto está en promoción, permite vendere abajo del costo.</option>
      </options>
    </field>
    <field name="noSujeto" type="boolean" column="no_sujeto" nullable="false">
      <options>
        <option name="comment">no hay calculo de IVA, columna no sujeto en la factura</option>
      </options>
    </field>
    <field name="pistola" type="boolean" column="pistola" nullable="false"/>
    <field name="foto" type="string" column="foto" length="80" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="activo" type="boolean" column="activo" nullable="false"/>
    <field name="userAdd" type="integer" column="user_add" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="dateAdd" type="datetime" column="date_add" nullable="false"/>
    <field name="userMod" type="integer" column="user_mod" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="dateMod" type="datetime" column="date_mod" nullable="true"/>
    <many-to-one field="idPresentacion" target-entity="CtlPresentacion" fetch="LAZY">
      <join-columns>
        <join-column name="id_presentacion" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="idSubgrupo" target-entity="CtlSubgrupo" fetch="LAZY">
      <join-columns>
        <join-column name="id_subgrupo" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="idMarca" target-entity="CtlMarca" fetch="LAZY">
      <join-columns>
        <join-column name="id_marca" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="idGrupo" target-entity="CtlGrupo" fetch="LAZY">
      <join-columns>
        <join-column name="id_grupo" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="idEmpresa" target-entity="CtlEmpresa" fetch="LAZY">
      <join-columns>
        <join-column name="id_empresa" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="idPuntoVenta" target-entity="CtlPuntoVenta" fetch="LAZY">
      <join-columns>
        <join-column name="id_punto_venta" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
