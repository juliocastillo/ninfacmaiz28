<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Ninfac\ContaBundle\Entity\CtlActivo" table="ctl_activo">
    <indexes>
      <index name="IDX_3CC5DDC996F5D4E9" columns="id_proveedor"/>
      <index name="IDX_3CC5DDC982C5E39F" columns="id_tipoactivo"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="SEQUENCE"/>
      <sequence-generator sequence-name="ctl_activo_id_seq" allocation-size="1" initial-value="1"/>
    </id>
    <field name="descripcion" type="string" column="descripcion" length="50" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="numeroInventario" type="string" column="numero_inventario" length="25" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="valor" type="decimal" column="valor" precision="12" scale="2" nullable="false"/>
    <field name="fechaCompra" type="date" column="fecha_compra" nullable="false"/>
    <field name="marca" type="string" column="marca" length="50" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="serie" type="string" column="serie" length="30" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="model" type="string" column="model" length="30" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="vidaUtil" type="integer" column="vida_util" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="valorUtil" type="decimal" column="valor_util" precision="12" scale="2" nullable="false"/>
    <field name="activo" type="boolean" column="activo" nullable="true"/>
    <many-to-one field="idTipoactivo" target-entity="CtlTipoactivo" fetch="LAZY">
      <join-columns>
        <join-column name="id_tipoactivo" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="idProveedor" target-entity="MntProveedor" fetch="LAZY">
      <join-columns>
        <join-column name="id_proveedor" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
